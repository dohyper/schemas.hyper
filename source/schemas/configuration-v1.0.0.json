{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://schemas.hyper.mathematikoi.co/configuration-v1.0.0.json",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "properties": {
            "$ref": "#/$defs/properties"
        },
        "relations": {
            "$ref": "#/$defs/relations"
        }
    },
    "required": [
        "name"
    ],
    "anyOf": [
        {
            "required": [
                "properties"
            ]
        },
        {
            "required": [
                "relations"
            ]
        }
    ],
    "$defs": {
        "properties": {
            "type": "object",
            "propertyNames": {
                "pattern": "^[a-zA-Z0-9_]+$",
                "$ref": "https://json-schema.org/draft/2020-12/schema"
            },
            "minProperties": 1
        },
        "relations": {
            "type": "object",
            "propertyNames": {
                "pattern": "^[a-zA-Z0-9_]+$",
                "$ref": "#/$defs/relation"
            },
            "minProperties": 1
        },
        "relation": {
            "type": "object",
            "properties": {
                "resource": {
                    "type": "string"
                },
                "cardinality": {
                    "$ref": "#/$defs/cardinality"
                }
            },
            "required": [
                "resource",
                "cardinality"
            ]
        },
        "cardinality": {
            "type": "string",
            "enum": [
                "to-one",
                "to-many"
            ]
        }
    }
}